@model ProjectName.Model.RequestViewModels.RequestLoginModel;
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    <style>
        .center {
            margin: auto;
            width: 50%;
        }

        .field-validation-error {
            color: red;
        }

        .validation-summary-errors {
            color: red
        }
    </style>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}
<div class="center">
    <h2 class="text-center">Login</h2>
    <div asp-validation-summary="ModelOnly">
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="email"></label>
            <input asp-for="email" class="form-control" placeholder="">
            <small class="form-text text-muted">
                <span asp-validation-for="email"></span>
            </small>
        </div>
        <div class="form-group">
            <label asp-for="pass"></label>
            <input asp-for="pass" class="form-control" placeholder="">
            <small class="form-text text-muted">
                <span asp-validation-for="pass"></span>
            </small>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
    </form>
</div>
@section footer{

}

