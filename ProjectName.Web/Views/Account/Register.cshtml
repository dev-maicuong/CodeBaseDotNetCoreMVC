@model ProjectName.Model.RequestViewModels.RequestRegister;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    <style>
        .center {
            margin: auto;
            width: 50%;
        }
    </style>
            }

<div class="center">
    <h2 class="text-center">Register</h2>
    <div asp-validation-summary="ModelOnly">
    </div>
    <form method="post">
        <div class="form-group">
            @Html.AntiForgeryToken()
            <label asp-for="email"></label>
            <input asp-for="email" class="form-control" placeholder="">
            <small class="form-text text-muted">
                <span asp-validation-for="email"></span>
            </small>
        </div>
        <div class="form-group">
            <label asp-for="pass"></label>
            <input asp-for="pass" class="form-control" placeholder="">
            <small class="form-text text-muted">
                <span asp-validation-for="pass"></span>
            </small>
        </div>
        <div class="form-group">
            <label asp-for="firstName"></label>
            <input asp-for="firstName" class="form-control" placeholder="">
            <small class="form-text text-muted">
                <span asp-validation-for="firstName"></span>
            </small>
        </div>
        <div class="form-group">
            <label asp-for="lastName"></label>
            <input asp-for="lastName" class="form-control" placeholder="">
            <small class="form-text text-muted">
                <span asp-validation-for="lastName"></span>
            </small>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
    </form>
</div>
@section footer{

 }

